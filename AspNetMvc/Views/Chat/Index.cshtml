@model List<Proyecto_Unidad_2_MVC_Sistema_Gestion_Salud_Predictiva.Models.ConversacionChat>

@{
    ViewBag.Title = "Mis Conversaciones de Chat";
    Layout = "~/Views/Shared/_LayoutPaciente.cshtml";
}

<div class="row mt-4">
    <div class="col-12">
        <h2><i class="fas fa-comments"></i> Mis Conversaciones de Chat</h2>
        <p class="lead">Historial de tus conversaciones con el asistente médico virtual</p>
    </div>
</div>

<div class="row mb-3">
    <div class="col-12">
        <a href="@Url.Action("Nueva", "Chat")" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle"></i> Nueva Conversación
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <i class="fas fa-list"></i> Conversaciones
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Fecha Inicio</th>
                                    <th>Última Actividad</th>
                                    <th>Mensajes</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var conversacion in Model)
                                {
                                    <tr>
                                        <td><strong>@conversacion.Title</strong></td>
                                        <td>@conversacion.StartedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@conversacion.LastActivity.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td><span class="badge bg-secondary">@conversacion.MessagesCount</span></td>
                                        <td>
                                            @if (conversacion.IsActive)
                                            {
                                                <span class="badge bg-success">Activa</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Cerrada</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Conversacion", "Chat", new { id = conversacion.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No tienes conversaciones aún. ¡Inicia una nueva!
                    </div>
                }
            </div>
        </div>
    </div>
</div>

