@model Proyecto_Unidad_2_MVC_Sistema_Gestion_Salud_Predictiva.Models.MedicoDashboardViewModel

@{
    ViewBag.Title = "Dashboard - Médico";
}

<div class="row mt-4">
    <div class="col-12">
        <h2><i class="bi bi-stethoscope"></i> Dashboard del Médico</h2>
        <p class="lead">Bienvenido, @ViewBag.UsuarioNombre</p>
    </div>
</div>

<div class="row">
    <!-- Estadísticas Generales -->
    <div class="col-md-3 mb-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.EstadisticasGenerales.CitasHoy</h4>
                        <p class="mb-0">Citas Hoy</p>
                    </div>
                    <i class="bi bi-calendar-day fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.EstadisticasGenerales.CitasSemana</h4>
                        <p class="mb-0">Citas esta Semana</p>
                    </div>
                    <i class="bi bi-calendar-week fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.EstadisticasGenerales.PacientesAtendidos</h4>
                        <p class="mb-0">Pacientes Atendidos</p>
                    </div>
                    <i class="bi bi-people fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.EstadisticasGenerales.PromedioConsultas.ToString("F1")</h4>
                        <p class="mb-0">Promedio Diario</p>
                    </div>
                    <i class="bi bi-graph-up fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Citas de Hoy -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5><i class="bi bi-calendar-day"></i> Citas de Hoy</h5>
            </div>
            <div class="card-body">
                @if (Model.CitasHoy.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var cita in Model.CitasHoy)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="me-auto">
                                    <div class="fw-bold">@cita.FechaHora.ToString("HH:mm") - @cita.Paciente.Usuario.NombreCompleto</div>
                                    <p class="mb-1">@cita.MotivoConsulta</p>
                                    <small class="text-muted">
                                        <i class="bi bi-telephone"></i> @cita.Paciente.Usuario.Telefono
                                    </small>
                                </div>
                                <div class="d-flex flex-column align-items-end">
                                    <span class="badge bg-@(cita.Estado == Proyecto_Unidad_2_MVC_Sistema_Gestion_Salud_Predictiva.Models.EstadoCita.Confirmada ? "success" : cita.Estado == Proyecto_Unidad_2_MVC_Sistema_Gestion_Salud_Predictiva.Models.EstadoCita.EnCurso ? "warning" : "secondary") mb-1">
                                        @cita.EstadoTexto
                                    </span>
                                    <a href="@Url.Action("DetalleCita", "Medico", new { id = cita.Id })" class="btn btn-sm btn-outline-primary">
                                        Ver Detalle
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-calendar-x fs-1 text-muted"></i>
                        <p class="text-muted mt-2">No tienes citas programadas para hoy</p>
                    </div>
                }
            </div>
            <div class="card-footer text-center">
                <a href="@Url.Action("MisCitas", "Medico")" class="btn btn-primary">Ver Todas las Citas</a>
            </div>
        </div>
    </div>

    <!-- Acciones Rápidas -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5><i class="bi bi-lightning-charge"></i> Acciones Rápidas</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <div class="row g-3 flex-grow-1">
                    <div class="col-12">
                        <a href="@Url.Action("MisCitas", "Medico")" class="btn btn-outline-primary w-100">
                            <i class="bi bi-calendar-check"></i> Gestionar Citas
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="@Url.Action("PacientesAtendidos", "Medico")" class="btn btn-outline-info w-100">
                            <i class="bi bi-people"></i> Ver Pacientes
                        </a>
                    </div>
                    <div class="col-12">
                        <a href="@Url.Action("MiHorario", "Medico")" class="btn btn-outline-warning w-100">
                            <i class="bi bi-clock"></i> Configurar Horario
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Próximas Citas (7 días) -->
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5><i class="bi bi-calendar-range"></i> Próximas Citas (7 días)</h5>
            </div>
            <div class="card-body">
                @if (Model.ProximasCitas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Fecha y Hora</th>
                                    <th>Paciente</th>
                                    <th>Motivo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cita in Model.ProximasCitas.Take(10))
                                {
                                    <tr>
                                        <td>
                                            <strong>@cita.FechaHora.ToString("dd/MM/yyyy")</strong><br>
                                            <small class="text-muted">@cita.FechaHora.ToString("HH:mm")</small>
                                        </td>
                                        <td>
                                            <strong>@cita.Paciente.Usuario.NombreCompleto</strong><br>
                                            <small class="text-muted">
                                                <i class="bi bi-telephone"></i> @cita.Paciente.Usuario.Telefono
                                            </small>
                                        </td>
                                        <td>@cita.MotivoConsulta</td>
                                        <td>
                                            <span class="badge bg-@(cita.Estado == Proyecto_Unidad_2_MVC_Sistema_Gestion_Salud_Predictiva.Models.EstadoCita.Confirmada ? "success" : cita.Estado == Proyecto_Unidad_2_MVC_Sistema_Gestion_Salud_Predictiva.Models.EstadoCita.Programada ? "warning" : "secondary")">
                                                @cita.EstadoTexto
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("DetalleCita", "Medico", new { id = cita.Id })" class="btn btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                @if (cita.Estado == Proyecto_Unidad_2_MVC_Sistema_Gestion_Salud_Predictiva.Models.EstadoCita.Programada)
                                                {
                                                    using (Html.BeginForm("ConfirmarCita", "Medico", FormMethod.Post, new { @class = "d-inline" }))
                                                    {
                                                        @Html.Hidden("citaId", cita.Id)
                                                        <button type="submit" class="btn btn-outline-success" title="Confirmar">
                                                            <i class="bi bi-check"></i>
                                                        </button>
                                                    }
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    if (Model.ProximasCitas.Count > 10)
                    {
                        <div class="text-center mt-3">
                            <a href="@Url.Action("MisCitas", "Medico")" class="btn btn-info">
                                Ver Todas (@Model.ProximasCitas.Count citas)
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-calendar-x fs-1 text-muted"></i>
                        <p class="text-muted mt-2">No tienes citas programadas para los próximos 7 días</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Citas Pendientes de Confirmación -->
@if (Model.CitasPendientes.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5><i class="bi bi-exclamation-triangle"></i> Citas Pendientes de Confirmación</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Fecha y Hora</th>
                                    <th>Paciente</th>
                                    <th>Motivo</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cita in Model.CitasPendientes)
                                {
                                    <tr>
                                        <td>
                                            <strong>@cita.FechaHora.ToString("dd/MM/yyyy HH:mm")</strong>
                                        </td>
                                        <td>
                                            <strong>@cita.Paciente.Usuario.NombreCompleto</strong><br>
                                            <small class="text-muted">@cita.Paciente.Usuario.Telefono</small>
                                        </td>
                                        <td>@cita.MotivoConsulta</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                @using (Html.BeginForm("ConfirmarCita", "Medico", FormMethod.Post, new { @class = "d-inline" }))
                                                {
                                                    @Html.Hidden("citaId", cita.Id)
                                                    <button type="submit" class="btn btn-success">
                                                        <i class="bi bi-check"></i> Confirmar
                                                    </button>
                                                }
                                                <a href="@Url.Action("DetalleCita", "Medico", new { id = cita.Id })" class="btn btn-outline-primary">
                                                    <i class="bi bi-eye"></i> Ver
                                                </a>
                                                <button type="button" class="btn btn-outline-danger" 
                                                        onclick="cancelarCita(@cita.Id, '@cita.Paciente.Usuario.NombreCompleto')">
                                                    <i class="bi bi-x"></i> Cancelar
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modal para Cancelar Cita -->
<div class="modal fade" id="modalCancelarCita" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancelar Cita</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            @using (Html.BeginForm("CancelarCita", "Medico", FormMethod.Post))
            {
                <div class="modal-body">
                    <p>¿Está seguro de que desea cancelar la cita con <strong id="nombrePaciente"></strong>?</p>
                    @Html.Hidden("citaId", "", new { id = "citaIdCancelar" })
                    <div class="mb-3">
                        <label class="form-label">Motivo de la cancelación</label>
                        <textarea name="motivo" class="form-control" rows="3" required 
                                  placeholder="Ingrese el motivo de la cancelación"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-danger">Cancelar Cita</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelarCita(citaId, nombrePaciente) {
            $('#citaIdCancelar').val(citaId);
            $('#nombrePaciente').text(nombrePaciente);
            $('#modalCancelarCita').modal('show');
        }
    </script>
}