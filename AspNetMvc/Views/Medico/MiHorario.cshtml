@{
    ViewBag.Title = "Mi Horario";
    Layout = "~/Views/Share/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="bi bi-clock"></i> Mi Horario</h2>
            <p class="lead">Configura tus horarios de trabajo y días disponibles para citas.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-clock"></i> Horario de Trabajo
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="horarioInicio" class="form-label">Hora de inicio</label>
                            <input type="time" class="form-control" id="horarioInicio" value="08:00" disabled>
                        </div>
                        <div class="mb-3">
                            <label for="horarioFin" class="form-label">Hora de fin</label>
                            <input type="time" class="form-control" id="horarioFin" value="16:00" disabled>
                        </div>
                        <div class="mb-3">
                            <label for="dias" class="form-label">Días de trabajo</label>
                            <select class="form-select" id="dias" multiple disabled>
                                <option selected>Lunes</option>
                                <option selected>Martes</option>
                                <option selected>Miércoles</option>
                                <option selected>Jueves</option>
                                <option selected>Viernes</option>
                            </select>
                        </div>
                        <button type="button" class="btn btn-primary" disabled>Guardar cambios</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
