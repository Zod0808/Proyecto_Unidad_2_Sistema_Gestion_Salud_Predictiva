@{
    ViewBag.Title = "Chat IA - Triaje Inteligente";
    Layout = "~/Views/Share/_Layout.cshtml";
}

<div class="row mt-4">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <i class="bi bi-chat-dots"></i> Chat IA - Evaluación de Síntomas
            </div>
            <div class="card-body chat-container" style="max-height:400px; overflow-y:auto;">
                <div class="message user">
                    <div class="message-bubble">Hola, tengo dolor de cabeza y fiebre.</div>
                </div>
                <div class="message ai">
                    <div class="message-bubble">¿Desde cuándo presenta los síntomas?</div>
                </div>
                <div class="message user">
                    <div class="message-bubble">Desde hace 2 días.</div>
                </div>
                <div class="message ai">
                    <div class="message-bubble">¿La fiebre es mayor a 38°C?</div>
                </div>
                <div class="message user">
                    <div class="message-bubble">Sí, 38.5°C.</div>
                </div>
                <div class="message ai">
                    <div class="message-bubble">¿Presenta otros síntomas como tos, dificultad para respirar o dolor muscular?</div>
                </div>
                <div class="message user">
                    <div class="message-bubble">Solo dolor muscular.</div>
                </div>
                <div class="message ai">
                    <div class="message-bubble">Nivel de urgencia estimado: <span class="badge bg-warning text-dark">2 - Moderado</span><br>Recomendación: Solicite cita médica en las próximas 24-48 horas.</div>
                </div>
            </div>
            <div class="card-footer">
                <form class="d-flex gap-2">
                    <input type="text" class="form-control" placeholder="Escribe tu síntoma..." disabled>
                    <button class="btn btn-info" type="button" disabled>Enviar</button>
                </form>
            </div>
        </div>
        <div class="mt-3 text-end">
            <button class="btn btn-outline-secondary btn-sm" disabled>Exportar conversación</button>
        </div>
    </div>
</div>
