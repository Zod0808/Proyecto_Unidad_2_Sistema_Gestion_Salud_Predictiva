@model Proyecto_Unidad_2_MVC_Sistema_Gestion_Salud_Predictiva.Models.PacienteDashboardViewModel

@{
    ViewBag.Title = "Mi Espacio - Paciente";
    Layout = "~/Views/Shared/_LayoutPaciente.cshtml";
}

<div class="row mt-4">
    <div class="col-12">
        <h2><i class="fas fa-user-circle"></i> Mi Espacio</h2>
        <p class="lead">Bienvenido, @ViewBag.UsuarioNombre</p>
    </div>
</div>

<div class="row">
    <!-- Estadísticas Generales -->
    <div class="col-md-4 mb-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.ChatsIA.Count</h4>
                        <p class="mb-0">Chats con IA</p>
                    </div>
                    <i class="fas fa-robot fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.HistorialReciente.Count</h4>
                        <p class="mb-0">Registros Médicos</p>
                    </div>
                    <i class="fas fa-file-medical fs-1"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card bg-secondary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <small>@Model.EstadisticasGenerales.UltimaConsulta.ToString("dd/MM/yyyy")</small>
                        <p class="mb-0">Última Consulta</p>
                    </div>
                    <i class="fas fa-calendar-check fs-1"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Acciones Rápidas -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-primary text-white">
                <h5><i class="fas fa-bolt"></i> Acciones Rápidas</h5>
            </div>
            <div class="card-body d-flex flex-column">
                <div class="d-grid gap-2 flex-grow-1 d-flex flex-column justify-content-center">
                    <a href="@Url.Action("ChatIA", "Paciente")" class="btn btn-lg btn-outline-primary">
                        <i class="fas fa-robot"></i> Iniciar Chat con IA
                    </a>
                    <a href="@Url.Action("HistorialMedico", "Paciente")" class="btn btn-lg btn-outline-success">
                        <i class="fas fa-file-medical"></i> Ver Mi Historial Médico
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Historial Reciente -->
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5><i class="fas fa-file-medical"></i> Mi Historial Reciente</h5>
            </div>
            <div class="card-body">
                @if (Model.HistorialReciente.Any())
                {
                    foreach (var historial in Model.HistorialReciente.Take(5))
                    {
                        <div class="border-bottom pb-2 mb-2">
                            <strong>@historial.Diagnostico</strong>
                            <br>
                            <small class="text-muted">
                                Dr. @historial.Medico.Usuario.NombreCompleto
                            </small>
                            <br>
                            <small class="text-muted">
                                @historial.Fecha.ToString("dd/MM/yyyy")
                            </small>
                        </div>
                    }
                    <div class="text-center mt-3">
                        <a href="@Url.Action("HistorialMedico", "Paciente")" class="btn btn-sm btn-outline-success">Ver Historial Completo</a>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">No hay historial médico disponible</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Chats IA Recientes -->
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5><i class="fas fa-robot"></i> Mis Chats con IA</h5>
            </div>
            <div class="card-body">
                @if (Model.ChatsIA.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Consulta</th>
                                    <th>Nivel de Urgencia</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var chat in Model.ChatsIA)
                                {
                                    <tr>
                                        <td>@chat.FechaInicio.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@chat.ResumenTriaje</td>
                                        <td>
                                            <span class="badge bg-@(chat.NivelUrgencia <= 2 ? "success" : chat.NivelUrgencia == 3 ? "warning" : "danger")">
                                                @chat.NivelUrgenciaTexto
                                            </span>
                                        </td>
                                        <td>
                                            @if (chat.Completado)
                                            {
                                                <span class="badge bg-success">Completado</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">En Proceso</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Chat", "Paciente", new { id = chat.Id })" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-robot fs-1 text-muted"></i>
                        <p class="text-muted mt-2">No has iniciado ningún chat con la IA todavía</p>
                        <a href="@Url.Action("ChatIA", "Paciente")" class="btn btn-lg btn-primary">
                            <i class="fas fa-robot"></i> Iniciar Chat con IA
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>